{
  "width": 300,
  "height": {{ height }},
  "data": [
    {
      "name": "counts",
      "values": {{ data }}
    }
  ],
  "scales": [
    {
      "name": "y",
      "type": "ordinal",
      "range": "height",
      "domain": {"data": "counts", "field": "index"}
    },
    {
      "name": "yl",
      "type": "ordinal",
      "range": "height",
      "domain": {"data": "counts", "field": "data.label"}
    },
    {
      "name": "x",
      "type": "linear",
      "range": "width",
      "nice": true,
      "domain": {"data": "counts", "field": "data.max"}
    }
  ],
  "axes": [
    {"type": "x", "scale": "x", "ticks": 6, "offset": 5, "title": "log10 counts"},
    {
        "type": "y",
        "scale": "yl",
        "offset": 5,
        "properties": {
            "axis": { "stroke": { "value": "transparent" } },
            "ticks": { "stroke": { "value": "transparent" } }
        }
    }
  ],
  "marks": [
    {
      "type": "rect",
      "from": {"data": "counts"},
      "properties": {
        "enter": {
          "x": {"scale": "x", "field": "data.min"},
          "x2": {"scale": "x", "field": "data.max"},
          "y": {"scale": "y", "field": "index", "offset": 6},
          "height": {"value": 1},
          "fill": {"value": "black"}
        }
      }
    },
    {
      "type": "rect",
      "from": {"data": "counts"},
      "properties": {
        "enter": {
          "x": {"scale": "x", "field": "data.min"},
          "y": {"scale": "y", "field": "index", "offset": 5},
          "height": {"value": 3},
          "width": {"value": 1},
          "fill": {"value": "black"}
        }
      }
    },
    {
      "type": "rect",
      "from": {"data": "counts"},
      "properties": {
        "enter": {
          "x": {"scale": "x", "field": "data.max"},
          "y": {"scale": "y", "field": "index", "offset": 5},
          "height": {"value": 3},
          "width": {"value": 1},
          "fill": {"value": "black"}
        }
      }
    },
    {
      "type": "rect",
      "from": {
          "data": "counts"
      },
      "properties": {
        "enter": {
          "x": {"scale": "x", "field": "data.lo"},
          "x2": {"scale": "x", "field": "data.hi"},
          "y": {"scale": "y", "field": "index", "offset": 0},
          "height": {"scale": "y", "band": true, "offset": -1},
          "fill": {"value": "steelblue"},
          "stroke": {"value": "transparent"}
        }
      }
    },
    {
      "type": "rect",
      "from": {"data": "counts"},
      "properties": {
        "enter": {
          "x": {"scale": "x", "field": "data.median"},
          "width": {"value": 1},
          "y": {"scale": "y", "field": "index", "offset": 0},
          "height": {"scale": "y", "band": true, "offset": -1},
          "fill": {"value": "black"}
        }
      }
    }
  ]
}
