{
    "width": 500,
    "height": 600,
    "padding": "strict",
    "data": [
        {
            "name": "clustering",
            "values": {{ data }}
        }
    ],
    "scales": [
        {
            "name": "layout_x",
            "range": "width",
            "type": "linear",
            "domain": [0, 1]
        },
        {
            "name": "layout_y",
            "range": "height",
            "type": "ordinal",
            "domain": [0]
        }
    ],
    "marks": [
        {
            "type": "group",
            "properties": {
                "enter": {
                    "x": {"scale": "layout_x", "value": 0},
                    "y": {"scale": "layout_y", "value": 0},
                    "width": {"scale": "layout_x", "value": 1},
                    "height": {"scale": "layout_y", "band": true}
                }
            },
            "scales": [
                {
                    "name": "x",
                    "type": "ordinal",
                    "range": "width",
                    "domain": {
                        "data": "clustering",
                        "field": "data.condition"
                    }
                },
                {
                    "name": "y",
                    "type": "ordinal",
                    "range": "height",
                    "domain": {
                        "data": "clustering",
                        "field": "data.target"
                    }
                },
                {
                    "name": "c",
                    "type": "linear",
                    "range": ["white", "steelblue"],
                    "domain": {
                        "data": "clustering",
                        "field": "data.beta"
                    }
                }
            ],
            "axes": [
                {
                    "type": "x",
                    "scale": "x",
                    "orient": "bottom",
                    "properties": {
                        "axis": { "stroke": { "value": "transparent" } },
                        "ticks": { "stroke": { "value": "transparent" } },
                        "labels": {
                            "angle": { "value": -45 },
                            "baseline": { "value": "middle" },
                            "align": {"value": "right"}
                        }
                    }
                }
            ],
            "marks": [
                {
                    "type": "rect",
                    "from": {
                        "data": "clustering"
                    },
                    "properties": {
                        "enter": {
                            "x": {
                                "scale": "x",
                                "field": "data.condition"
                            },
                            "width": {
                                "scale": "x",
                                "band": true
                            },
                            "y": {
                                "scale": "y",
                                "field": "data.target"
                            },
                            "height": {
                                "scale": "y",
                                "band": true
                            },
                            "fill": {
                                "scale": "c",
                                "field": "data.beta"
                            },
                            "stroke": {
                                "value": "transparent"
                            }
                        }
                    }
                }
            ]
        }
    ]
}
