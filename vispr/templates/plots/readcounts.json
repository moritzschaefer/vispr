{
    "width": 150,
    "height": 150,
    "data": [
        {
            "name": "dist",
            "values": {{ data }}
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "range": "width",
            "domain": {"data": "dist", "field": "count"}
        },
        {
            "name": "y",
            "type": "linear",
            "range": "height",
            "nice": true,
            "domain": {"data": "dist", "field": "density"}
        },
        {
            "name": "c",
            "type": "ordinal",
            "domain": {"data": "dist", "field": "sample"},
            "range": "category20"
        }
    ],
    "axes": [
        {
            "type": "x",
            "scale": "x",
            "nice": true,
            "ticks": 6,
            "offset": 5,
            "title": "log10 read count",
            "properties": {
                "labels": {
                    "angle": { "value": -45 },
                    "baseline": { "value": "middle" },
                    "align": {"value": "right"}
                }
            }
        },
        {"type": "y", "scale": "y", "nice": true, "ticks": 6, "offset": 5, "title": "CDF"}
    ],
    "marks": [
        {
            "type": "group",
            "from": {
                "data": "dist",
                "transform": [{"type": "facet", "keys": ["sample"]}]
            },
            "marks": [
                {
                    "type": "line",
                    "properties": {
                        "enter": {
                            "x": {"scale": "x", "field": "count"},
                            "y": {"scale": "y", "field": "density"},
                            "opacity": {"value": 0.5},
                            "stroke": {"scale": "c", "field": "sample"},
                            "strokeWidth": {"value": 2}
                        }
                    }
                }
            ]
        }
    ],
    "legends": [
        {
            "fill": "c",
            "title": "samples",
            "properties": {
                "symbols": {
                    "stroke": {"value": "transparent"},
                    "opacity": {"value": 0.5}
                }
            }
        }
    ]
}
