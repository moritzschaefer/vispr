{
    "width": 150,
    "height": 150,
    "data": [
        {
            "name": "seqqual",
            "values": {{ data }}
        }
    ],
    "scales": [
        {
            "name": "x",
            "type": "linear",
            "range": "width",
            "nice": true,
            "zero": false,
            "domain": {"data": "seqqual", "field": "qual"}
        },
        {
            "name": "y",
            "type": "linear",
            "range": "height",
            "nice": true,
            "domain": {"data": "seqqual", "field": "density"}
        },
        {
            "name": "c",
            "type": "ordinal",
            "domain": {"data": "seqqual", "field": "sample"},
            "range": "category20"
        }
    ],
    "axes": [
        {"type": "x", "scale": "x", "nice": true, "ticks": 6, "offset": 5, "title": "mean sequence quality"},
        {"type": "y", "scale": "y", "nice": true, "ticks": 6, "offset": 5, "title": "density", "titleOffset": 50}
    ],
    "marks": [
        {
            "type": "group",
            "from": {
                "data": "seqqual",
                "transform": [{"type": "facet", "groupby": ["filename"]}]
            },
            "marks": [
                {
                    "type": "line",
                    "properties": {
                        "enter": {
                            "x": {"scale": "x", "field": "qual"},
                            "y": {"scale": "y", "field": "density"},
                            "opacity": {"value": 0.5},
                            "stroke": {"scale": "c", "field": "sample"},
                            "strokeWidth": {"value": 2}
                        }
                    }
                }
            ]
        }
    ],
    "legends": [
        {
            "fill": "c",
            "title": "samples",
            "properties": {
                "symbols": {
                    "stroke": {"value": "transparent"},
                    "opacity": {"value": 0.5}
                }
            }
        }
    ]
}
